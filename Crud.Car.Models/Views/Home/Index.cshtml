<table id="myTable" class="table table-striped table-bordered table-hover table-dark" >
    <thead>
        <tr>
            <td style="cursor: pointer">Car Id</td>
            <td style="cursor: pointer">Model</td>
            <td style="cursor: pointer">Price, ($)</td>
            <td style="cursor: pointer">Date of create</td>
            <td style="cursor: pointer">Color</td>
            <td>Features</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Model</td>
                <td>@car.Price</td>
                <td>@car.CreatedDate</td>
                <td style="color: @car.Color;">@car.Color</td>
                <td>
                    <a class="btn btn-sm btn-secondary m-1" href="/home/details/@car.Id">Read</a>
                    <a class="btn btn-sm btn-warning m-1" href="/home/edit/@car.Id">Update</a>
                    <a class="btn btn-sm btn-danger m-1" href="/home/delete/@car.Id" onclick="return confirm('Are you sure delete this record ?')">Delete</a>
                </td>
            </tr>
         }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "searching": true,
            "buttons": [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            "language": {
                "paginate": {
                    "first": "<button class='btn-pagination'>First</button>",
                    "last": "<button class='btn-pagination'>Last</button>",
                    "next": "<button class='btn-pagination'>Next</button>",
                    "previous": "<button class='btn-pagination'>Previous</button>"
                }
            },
            "dom": '<"top"lf><"middle"rt><"center"p>'
        });
    });
</script>