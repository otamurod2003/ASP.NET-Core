@model HomeIndexViewModel;
<h3 class="text-center">@Model.Title</h3>
<div class="m-2">
    <a class="btn btn-primary" href="/home/create">+Add new car</a>
</div>

<div class="search">
    <span>
        Search by
        <select>
            <option value="value">Id</option>
            <option value="value">Model</option>
            <option value="value">Color</option>

        </select>
        <input type="search" placeholder="Search..." class="form-control-sm" />
    </span>
</div>
<table id="myTable" class="table table-striped table-bordered table-hover table-dark" >
    <thead>
        <tr>
            <td>Car Id</td>
            <td>Model</td>
            <td>Price, ($)</td>
            <td>Date of create</td>
            <td>Color</td>
            <td>Features</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Model</td>
                <td>@car.Price</td>
                <td>@car.CreatedDate</td>
                <td style="color: @car.Color;">@car.Color</td>
                <td>
                    <a class="btn btn-sm btn-secondary m-1" href="/home/details/@car.Id">Read</a>
                    <a class="btn btn-sm btn-warning m-1" href="/home/edit/@car.Id">Update</a>
                    <a class="btn btn-sm btn-danger m-1" href="/home/delete/@car.Id" onclick="return confirm('Are you sure delete this record ?')">Delete</a>
                </td>
            </tr>
         }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $(#myTable).DataTables();
    });
</script>