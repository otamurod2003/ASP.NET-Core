<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <environment include="Development">
        <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/jQuery/jquery-3.6.4.min.js"></script>
        <script src="~/bootstrap/js/bootstrap.min.js"></script>
    </environment>
    <link href="~/css/site.css" rel="stylesheet" />
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    </environment>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container bg-dark text-light" >
        @*Navbar Section*@
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">

            <a href="/" class="navbar-brand"><img src="~/images/car.png" alt="Car image" class="img"/></a>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#hamburgerNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="hamburgerNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/create">New Car</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-target="#myModal" data-bs-toggle="modal">
                            About
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        @*Modal dialog*@
        <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="exampleModalLabel">About Us</h4>
                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-header">
                                Lorem ipsum dolor sit
                            </div>
                            <div class="card-body">
                                <p>
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Similique error
                                    possimus dolor, sunt enim accusantium repudiandae quasi sed temporibus in?
                                </p>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-outline-primary">Details</button>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @RenderBody()
        </div>
    </div>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts");
    }
</body>
</html>
