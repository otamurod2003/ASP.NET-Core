@model HomeDetailsViewModel
@{
   
    ViewBag.Title = "Staff Details";
}
        <h1 class="text-center">@Model.Title</h1>
  <table border="1">
            <th>Staff Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <tr>
                <td>@Model.Staff.Id</td>
                <td>@Model.Staff.FirstName @Model.Staff.LastName</td>
                <td>@Model.Staff.Email</td>
                <td>@Model.Staff.Department</td>
            </tr>


 </table>

 @section Scripts{
     <script src="~/scripts/main1.js"></script>

 }
          