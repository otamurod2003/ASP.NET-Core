@model HomeDetailsViewModel;

<div class="card">
  <div class="card-header">
    <h2>@Model.Staff.FirstName @Model.Staff.LastName</h2>
  </div>

  <div class="card-content">
    <img class="card-image-center" src="~/images/img3.jpg" alt="Staff image">
    <h3>Staff Id: @Model.Staff.Id</h3>
    <h3>Email: @Model.Staff.Email</h3>
    <h3>Department: @Model.Staff.Department</h3>

  </div>
  <div class="card-footer">
    <a asp-action="index" asp-controller="home" class="btn btn-primary">Back</a>
    <a href="" class="btn btn-primary">Edit</a>
    <a href="" class="btn btn-danger">Delete</a>
  </div>
</div>
