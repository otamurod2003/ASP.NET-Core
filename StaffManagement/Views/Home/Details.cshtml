@model HomeDetailsViewModel;
@{ 
    ViewBag.Title = "Staff Details";
    var photoFilePath = "~/images/" + (Model.Staff.PhotoFilePath ?? "user.jpg");
}
<div class="card">
  <div class="card-header">
    <h2>@Model.Staff.FirstName @Model.Staff.LastName</h2>
  </div>

  <div class="card-content">
    <img class="card-image-center" src="@photoFilePath" alt="Staff image" asp-append-version="true" width="200px" height="200px" >
    <h3>Staff Id: @Model.Staff.Id</h3>
    <h3>Email: @Model.Staff.Email</h3>
    <h3>Department: @Model.Staff.Department</h3>

  </div>
  <div class="card-footer">
    <a asp-action="index" asp-controller="home" class="btn btn-primary m-1">Back</a>
    <a href="/home/edit/@Model.Staff.Id" class="btn btn-primary m-1">Edit</a>
    <a class="btn btn-danger m-1" asp-controller="home" asp-action="delete" asp-route-Id="@Model.Staff.Id" onclick="return confirm('Delete this record ?');">Delete</a>
    

    
  </div>
</div>
