<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <environment include="Development">
        <script src="~/jQuery/jquery-3.6.4.min.js"></script>
        <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/bootstrap/js/bootstrap.min.js"></script>
    </environment>
    <environment exclude="Development">

    </environment>
    <link rel="stylesheet" href="~/css/site.css">
    <title>@ViewBag.Title</title>
</head>

<body>
    <div class="container-fluid">

        <nav>
            <div class="navbar navbar-expand-sm navbar-dark bg-dark">
                <a asp-action="index" asp-controller="home" class="navbar-brand">
                    <img src="~/images/allstaff.png" alt="Navbar brand" width="30" height="30"
                        asp-append-version="true">
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#hamburgerNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="hamburgerNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="nav-link">All Staff</a>
                        </li>
                        <li class="nav-item">
                            <a href="/home/create" class="nav-link">Create</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        <div>
            @RenderBody()
        </div>
    </div>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts");
    }
</body>

</html>
